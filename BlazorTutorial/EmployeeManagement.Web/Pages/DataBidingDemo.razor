@page "/dataBidingDemo"
@inherits DataBidingDemoBase

<h1>DataBidingDemo</h1>
<hr />
<h3>One way Data Binding</h3>

<div>
    <b>Name :</b> @Name
</div>
<div>
    <b>Name with salutation:</b> @(Gender == "Male" ? $"Mr. {Name}" : $"Miss. {Name}")
</div>
<div>
    <b>Name: </b> <input value="@Name" />
</div>

<hr />
<h3>Two way Data Binding</h3>

<div>
    <b>Name: </b> <input value="@Name" @onchange="@(e => {Name = e.Value.ToString(); })" />
</div>
<div>
    <b>Name: </b> <input @bind="Name" />
</div>
<div>
    <b>Name: </b> <input @bind="Name" @bind:event="oninput" />
</div>
<hr />
<div class="d-block">
    <textarea class="w-50 h-50" @bind="Description" @bind:event="oninput"> </textarea>
    <div>
        <b>Count: </b> @Description.Length
    </div>
</div>
